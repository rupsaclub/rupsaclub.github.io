---
layout: base.njk
---
<h1 style="text-align: center; padding: 80px;">{{ title }}</h1>


<div class="event-gallery-container" style="margin-top:24px;">
    
    {% if featured %}
    <img src="{{ featured }}" alt="{{ title }} image" class="featured-image">
    {% endif %}
    
    {{ content | safe }}
    
    {% if images %}
    <h2>Event Gallery</h2>
    <div class="event-gallery">
        {% for image in images %}
        <img src="{{ image }}" alt="{{ title }} image">
        {% endfor %}
    </div>
    {% endif %}

</div>

<style>
    .event-gallery-container {
        max-width: 700px;
        margin: 40px auto;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
        border-radius: 8px;
        padding: 32px 24px;
    }

    .featured-image {
        width: 100%;
        height: auto;
        border-radius: 6px;
        object-fit: cover;
        max-height: 400px;
    }

    .event-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }

    .event-gallery img {
        width: 48%;
        border-radius: 6px;
        object-fit: cover;
        max-height: 320px;
    }

    @media (max-width: 600px) {
        .event-gallery img {
            width: 100%;
        }

        .featured-image {
            width: 100%;
            max-height: 300px;
        }
    }
</style>